<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:style="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/visType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="30sp"
        android:textColor="@color/black">

    </TextView>
    <TextView
        android:id="@+id/visSted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="30sp"
        android:textColor="@color/black">

    </TextView>
    <TextView
        android:id="@+id/visTidspunkt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="30sp"
        android:textColor="@color/black">

    </TextView>
    <TextView
        android:id="@+id/visDato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="30sp"
        android:textColor="@color/black">

    </TextView>
    <TextView
        android:id="@+id/visDeltakere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deltakere"
        android:padding="10dp"
        android:textSize="30sp"
        android:textColor="@color/black">

    </TextView>
    <ListView
        android:id="@+id/deltakerListeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/endreMøte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/endreMøte"
            />

        <ImageButton
            android:id="@+id/slettMøte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"

            android:src="@android:drawable/ic_menu_delete"
            android:tint="#070707" />
    </LinearLayout>

</LinearLayout>